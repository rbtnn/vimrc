directories %w[src]

def sep(f)
  puts "\033[93m#{Time.now}: #{File.basename f}\033[0m"
end

def run(cmd)
  puts cmd
  success = system cmd
  puts(success ? "\e[1;92mPASS\e[0m" : "\e[1;91mFAIL\e[0m")
  success
end

guard :shell do
  watch %r[^src/main\.rs$] do |m|
    sep m[0]
    if run 'cargo build'
      run './target/debug/gen-color-spring-night --dir ..'
    end
  end
  watch %r[^src/test\.rs$] do |m|
    sep m[0]
    run 'cargo test'
  end
end
